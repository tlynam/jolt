<h1>New Sale</h1>

<%= form_for @sale, :html => {:class => "form-horizontal"} do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <h3><li><%= message %></li><h3>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= f.label :units, "Cases", class: "col-xs-2 control-label" %>
    <div class="col-xs-1">
      <%= f.number_field :units, class: "form-control", :autofocus => true %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :first_name, "First Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :last_name, "Last Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :address2, class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :address2, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :city, class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :zip, class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :zip, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :country, class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :country, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :credit_card_number, "Credit Card Number", class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :credit_card_number, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :credit_card_date, "Credit Card Expiration", class: "col-sm-2 control-label" %>
    <div class="col-sm-2 col-xs-3">
      <%= f.text_field :credit_card_date, placeholder: 'MM/YYYY', class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :credit_card_ccv, "Credit Card CCV", class: "col-sm-2 control-label" %>
    <div class="col-xs-1">
      <%= f.text_field :credit_card_ccv, class: "form-control" %>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<%= link_to "Back", :back %>
